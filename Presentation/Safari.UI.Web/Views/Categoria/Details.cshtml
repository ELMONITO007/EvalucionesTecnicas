@model Safari.Entities.Categoria

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <link href="~/Areas/Admin/Content/css/sb-admin-2.css" rel="stylesheet" />

    <div class="align-content-lg-center">
        <h4>Detalles de la Categoria</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Categoria
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LaCategoria)
            </dd>

            <dt>
                Descripción
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>
        <div>
            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id })
            </p>
        </div>
        <input type="button" class="AzulButton " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "Categoria")'" />
    </div>




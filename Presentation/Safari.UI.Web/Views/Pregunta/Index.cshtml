@model IEnumerable<Safari.Entities.Pregunta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/Admin/Content/css/sb-admin-2.css" rel="stylesheet" />


<div>
    <div>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <div class="col-md-10">

                    <h4>Categoria de la Pregunta</h4>
                    @Html.DropDownList("Categoria", (SelectList)ViewBag.categoriaLista, new { @class = "form-control" })

                </div>

            </div>
            <div class="col-md-10">
                <input type="submit" value="Buscar" class="AzulButton" />
                <input type="button" class="AzulButton " style="float:right" value="Ver todo" onclick="location.href='@Url.Action("Index", "Pregunta")'" />
            </div>


        }
    </div>
    <div>
        <h4>
        </h4>
    </div>

    <div>
        <table class=" table table-responsive table-bordered" >
            <tr>
                <th>
                    <h4>Pregunta</h4>
                </th>
                <th>
                    <h4>Categoria</h4>
                </th>

                <th>
                    <h4>Imagen</h4>
                </th>
                <th>
                    <h4>Nivel</h4>
                </th>
                <th>
                    <h4>Tipo</h4>
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="max-width:600px">
                        @Html.DisplayFor(modelItem => item.LaPregunta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoria.LaCategoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Imagen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nivel.ElNivel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tipoPregunta.TipoDePregunta)
                    </td>

                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div  class=" col-md-12"  >
        
    <p>
        <input type="button" class="AzulButton " style="float:left" value="Crear" onclick="location.href='@Url.Action("Create", "Pregunta")'" />
    </p>
    </div>
</div>

@model Safari.Entities.TipoPregunta

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <link href="~/Areas/Admin/Content/css/sb-admin-2.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h2>Editar el Tipo de Pregunta nunero @Html.DisplayFor(model => model.Id)</h2>
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
       
            <div class="col-md-10">
                <h5>Tipo de Pregunta</h5>

                @Html.EditorFor(model => model.TipoDePregunta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipoDePregunta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" class="AzulButton " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "TipoPregunta")'" />
                <input type="submit" value="Guardar" class="AzulButton" />
            </div>
        </div>
</div>
}


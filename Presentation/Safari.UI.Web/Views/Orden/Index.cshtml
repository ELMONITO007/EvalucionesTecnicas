@model IEnumerable<Safari.Entities.Orden>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/Admin/Content/css/sb-admin-2.css" rel="stylesheet" />

<div>
    <div >
        @using (Html.BeginForm())
        {
        <div class="form-group">
            <div class="col-md-10">

                <h4>Categoria de la Pregunta</h4>
                @Html.DropDownList("Categoria", (SelectList)ViewBag.categoriaLista, new { @class = "form-control" })

            </div>

        </div>
            <div class="col-md-10"><input type="submit" value="Buscar" class="AzulButton" /></div>
            }
        </div>
    <div>
        <form>
            <p>


                <div>
                    @using (Html.BeginForm())
                    {


                        <div class="form-group">

                            <div class="col-md-10">
                                <h4>Pregunta</h4>
                                @Html.DropDownList("Pregunta", (SelectList)ViewBag.preguntaLista, new { @class = "form-control" })

                            </div>

                        </div>
                        <div class="col-md-10">

                            <input type="submit" value="Buscar" class="AzulButton" />
                            <input type="button" class="AzulButton " style="float:right" value="Ver todo" onclick="location.href='@Url.Action("Index", "Orden")'" />
                        </div>
                    }
                </div>
            </p>
        </form>
    </div>
    <div>

        <table class="table-bordered col-md-12 table-striped ">
            <tr>
                <th>
                    <h4 style="text-align:center">Pregunta</h4>
                </th>

                <th>

                    <h4 style="text-align:center"> Respuesta</h4>

                </th>
                <th>

                    <h4 style="text-align:center">Orden</h4>

                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="max-width:600px">
                        @Html.DisplayFor(modelItem => item.pregunta.LaPregunta)
                    </td>

                    <td style="max-width:500px">
                        @Html.DisplayFor(modelItem => item.LaRespuesta)
                    </td>
                    <td style="max-width:200px">

                        @Html.DisplayFor(modelItem => item.NumeroOrden)

                    </td>
                    <td style="max-width:400px">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        
    </div>
    <div>

        <p>
            <input type="button" class="AzulButton " style="float:left" value="Crear" onclick="location.href='@Url.Action("Create", "Orden")'" />
        </p>

    </div>
</div>

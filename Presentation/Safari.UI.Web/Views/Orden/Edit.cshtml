@model Safari.Entities.Orden

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/Admin/Content/css/sb-admin-2.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ditar la respuesta @Html.DisplayFor(model => model.LaRespuesta) </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
           
            <div class="col-md-10">
                <h5>Respuesta</h5>
                @Html.EditorFor(model => model.LaRespuesta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LaRespuesta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Orden</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroOrden, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroOrden, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" class="AzulButton " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "orden")'" />

            </div>
            <input type="submit" value="Guardar" class="AzulButton" />
        </div>
    </div>
}

